/* pages/profile/profile.wxss */
.container {
  padding: 40rpx 30rpx 120rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #4A7BF7 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.vip-badge {
  background: linear-gradient(135deg, #ffd89b 0%, #ff9a56 100%);
  color: #ffffff;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-weight: 600;
}

/* 用户统计 */
.user-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 32rpx 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.menu-list {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f7fa;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-badge {
  background: #ff4757;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.btn-logout {
  background: #ffffff;
  color: #ff4757;
  font-size: 30rpx;
  padding: 28rpx;
  border-radius: 20rpx;
  border: none;
  width: 100%;
}

.btn-logout::after {
  border: none;
}

