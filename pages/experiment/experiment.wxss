/* pages/experiment/experiment.wxss */
.container {
  padding: 40rpx 30rpx 120rpx;
  background-color: #f5f7fa;
}

.page-header {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 统计信息 */
.stats-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #4A7BF7 100%);
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 分类标签 */
.category-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.category-item {
  padding: 16rpx 32rpx;
  background: #ffffff;
  border-radius: 48rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.category-item.active {
  background: linear-gradient(135deg, #667eea 0%, #4A7BF7 100%);
  color: #ffffff;
}

/* 实验列表 */
.experiment-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.experiment-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.experiment-cover {
  position: relative;
  height: 320rpx;
  background: linear-gradient(135deg, #a8c0ff 0%, #c3cfe2 100%);
}

.cover-image {
  width: 100%;
  height: 100%;
}

.experiment-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  color: #ffffff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.experiment-badge.hot {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
}

.experiment-content {
  padding: 32rpx;
}

.experiment-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.experiment-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 24rpx;
}

.experiment-meta {
  display: flex;
  gap: 32rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
}

.experiment-action {
  display: flex;
  justify-content: center;
}

.btn-start {
  background: linear-gradient(135deg, #667eea 0%, #4A7BF7 100%);
  color: #ffffff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 48rpx;
  width: 100%;
  text-align: center;
}

