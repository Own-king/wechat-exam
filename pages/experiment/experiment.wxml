<!--pages/experiment/experiment.wxml-->
<view class="container">
  <view class="page-header">
    <text class="page-title">在线实验</text>
    <text class="page-subtitle">动手实践，提升技能</text>
  </view>

  <!-- 统计信息 -->
  <view class="stats-grid">
    <view class="stat-item">
      <text class="stat-number">{{stats.completed}}</text>
      <text class="stat-label">已完成</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.inProgress}}</text>
      <text class="stat-label">进行中</text>
    </view>
    <view class="stat-item">
      <text class="stat-number">{{stats.total}}</text>
      <text class="stat-label">总实验</text>
    </view>
  </view>

  <!-- 实验分类 -->
  <view class="category-tabs">
    <view class="category-item {{currentCategory === index ? 'active' : ''}}" 
          wx:for="{{categories}}" 
          wx:key="index"
          bindtap="switchCategory"
          data-index="{{index}}">
      <text>{{item}}</text>
    </view>
  </view>

  <!-- 实验列表 -->
  <view class="experiment-list">
    <view class="experiment-card" wx:for="{{experimentList}}" wx:key="id">
      <view class="experiment-cover">
        <image class="cover-image" src="{{item.cover}}" mode="aspectFill"></image>
        <view class="experiment-badge" wx:if="{{item.isNew}}">新</view>
        <view class="experiment-badge hot" wx:if="{{item.isHot}}">热</view>
      </view>
      <view class="experiment-content">
        <text class="experiment-title">{{item.title}}</text>
        <text class="experiment-desc">{{item.description}}</text>
        <view class="experiment-meta">
          <view class="meta-item">
            <image class="meta-icon" src="/images/time.png" mode="aspectFit"></image>
            <text>{{item.duration}}</text>
          </view>
          <view class="meta-item">
            <image class="meta-icon" src="/images/difficulty.png" mode="aspectFit"></image>
            <text>{{item.difficulty}}</text>
          </view>
          <view class="meta-item">
            <image class="meta-icon" src="/images/user.png" mode="aspectFit"></image>
            <text>{{item.participants}}人</text>
          </view>
        </view>
        <view class="experiment-action">
          <view class="btn-start" bindtap="startExperiment" data-id="{{item.id}}">
            {{item.status === 'completed' ? '再次实验' : item.status === 'inProgress' ? '继续实验' : '开始实验'}}
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

