/**
 * 全局样式
 */

/* 页面基础样式 */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 容器样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #4A7BF7 100%);
  color: #ffffff;
  border-radius: 24rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: none;
}

.btn-primary:active {
  opacity: 0.8;
}

